extends layout
block content
    h1= title
    p You can add a new product here with different product code
    form.ui.form(method='post', action='/products/new')
      .field
        label Product Code
        input(type='text', name='id', placeholder='Enter product code', required)
      .field
        label Product Name
        input(type='text', name='name', placeholder='Enter product name', required)
      .field
        label Quantity
        input(type='number', name='quantity', placeholder='Enter quantity', required)
      .field
        label Price/Pcs (RM)
        input(type='number', step="0.01", name='price', placeholder='Enter price', required)
      button.positive.ui.labeled.icon.button(type='submit')
        i.save.icon
        | Save